<% if @failure_message != nil %>
	<div id="failure_message" style="border: 2px solid red;">
		<h3> Sorry, couldn't access note. Maybe you're looking for one of these. </h3>
	</div>
<% end %>

<h1>Public Notes</h1>

<ul style="list-style-type:none;">
	<% @notes.public.each do |note| %>
		<li><button onclick="window.location.href = '/notes/<%= note.id %>';"><%= note.topic %></button></a>
			<em>authored by <a href="/users/<%= note.user.id %>"><%= note.user.name %></a></em></li>
	<% end %>
</ul>

